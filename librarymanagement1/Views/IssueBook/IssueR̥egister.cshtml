            </select>
            <input type="text" class="textbox" placeholder="Enter value">

            <select class="dropdown1">
                <option value="1">AccessionNo</option>
                <option value="2">Author</option>
                <option value="3">Barcode</option>
                <option value="4">BillNo</option>
                <option value="5">BookNo</option>
                <option value="6">Class</option>
                <option value="7">Cost</option>
                <option value="8">Edition</option>
                <option value="9">ISBN</option>
                <option value="10">Location</option>
                <option value="11">BookNo</option>
                <option value="12">Class</option>

            </select>
            <input type="text" class="textbox1" placeholder="Enter value">



            <button class="button" onclick="okButtonClick()">OK</button>
            <br />
        </div>

        <div class="table-responsive">
            <table class="table1" border="1">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>SrNo</th>
                        <th>AddmNo</th>
                        <th>AccNo</th>
                        <th>Name</th>
                        <th>RollNo</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Subject</th>
                        <th>Publisher</th>
                        <th>Edition</th>
                        <th>Days Delayed</th>
                        <th>Total Fine</th>
                        <th>Rec.No</th>
                        <th>Class</th>
                        <th>Section</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date</td>
                                <td>@item.SrNo</td>
                                <td>@item.AddmissionNo</td>
                                <td>@item.AccessionNo</td>
                                <td>@item.Name</td>
                                <td>@item.RollNo</td>
                                <td>@item.Title</td>
                                <td>@item.Author</td>
                                <td>@item.Subject</td>
                                <td>@item.Publisher</td>
                                <td>@item.Edition</td>
                                <td>@item.Date</td>
                                <td>@item.Cost</td>
                                <td>@item.SrNo</td>
                                <td>@item.Class</td>
                                <td>@item.Section</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            @*</div>*@

            <hr />
        </div>

        <footer class="foot">
            <input type="checkbox" class="selectAllCheckbox"> Select All

            <button class="button1" id="sendSmsButton">Send SMS</button>
        </footer>

        <script type="text/javascript">
