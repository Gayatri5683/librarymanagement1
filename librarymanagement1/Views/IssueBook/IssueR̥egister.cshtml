        <div class="h1">
            <h1><center>BOOK ISSUE REGISTER</center></h1>
        </div>
        @using (Html.BeginForm("IssueRegister", "IssueBook", FormMethod.Get))
        {
            @Html.AntiForgeryToken()
        }
        <div class="editor-field1">

            @Html.Label("From")

        </div>
        <div class="editor-field11">


            @Html.TextBoxFor(model => model[0].Date, new { id = "date-picker", style = "width:95px" })

        </div>
        <div class="editor-field2">
            @Html.Label("To")

        </div>
        <div class="editor-field12">




            @Html.TextBoxFor(model => model[0].Date, new { id = "date-picker1", style = "width:95px" })



        </div>



        <div class="form-row">
            <select class="dropdown">
                <option value="1">AccessionNo</option>
                <option value="2">Author</option>
                <option value="3">Barcode</option>
                <option value="4">BillNo</option>
                <option value="5">BookNo</option>
