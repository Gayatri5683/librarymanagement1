    $(document).ready(function () {
        $('#sendSmsButton').click(function () {
            // Assuming you want to send data from the form via AJAX
            var formData = $('#issueForm').serialize(); // Serialize form data

            $.ajax({
                url: '@Url.Action("SendSMS", "ControllerName")', // Replace with your controller and action
                type: 'POST', // Assuming you use POST method
                data: formData,
                success: function (response) {
                    // Handle success response here, if needed
                    alert('SMS sent successfully!');
                },
                error: function (error) {
                    // Handle error response here, if needed
                    alert('Error sending SMS: ' + error.responseText);
                }
            });
        });
    });
            function okButtonClick() {
                alert("OK Button Clicked.");
